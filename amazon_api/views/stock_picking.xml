<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="stock_picking_tree" model="ir.ui.view">
			<field name="name">stock_picking_tree</field>
			<field name="model">stock.picking</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
                    <field name="merchant_id"/>
                    <field name="state" invisible="1"/>
                    <field name="create_date"/>
				</tree>
			</field>
		</record>

        <record id="stock_picking_form" model="ir.ui.view">
			<field name="name">stock_picking_form</field>
			<field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
                <xpath expr="//header" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header" position="after">
                    <header>
                        <button name="do_new_transfer" string="确认发货" type="object" class="oe_highlight"/>
                        <button name="create_delivery_info" string="获取收件信息" type="object" class="oe_highlight"/>
                        <field name="b2b_state" widget="statusbar" statusbar_visible="wait_delivery,done"/>
                    </header>
                </xpath>

                <!--<xpath expr="//sheet" position="before">-->
                    <!--<header>-->
                        <!--<button name="upload_delivery_info" type="object" string="上传亚马逊"-->
                                <!--class="btn-primary"/>-->
                    <!--</header>-->
                <!--</xpath>-->
                <xpath expr="//sheet/group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/group" position="after">
                    <group>
                        <group>
                            <field name="merchant_id"/>
                            <field name="b2b_state" invisible="1"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="delivery_date" attrs="{'invisible': [('b2b_state', '!=', 'done')]}"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//page[position()=3]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[position()=3]" position="after">
                    <!--<page string="收件人信息">-->
                        <!--<group>-->
                            <!--<group>-->
                                <!--<field name="partner_id"/>-->
                                <!--<field name="country_id"/>-->
                                <!--<field name="province"/>-->
                                <!--<field name="city"/>-->
                                <!--<field name="street"/>-->
                                <!--<field name="postal_code"/>-->
                                <!--<field name="phone"/>-->
                                <!--<field name="e_mail"/>-->
                            <!--</group>-->
                        <!--</group>-->
                    <!--</page>-->
                    <page string="收件信息">
                        <group>
                            <group>
                                <field name="logistics_company_id"/>
                                <field name="shippment_number"/>
                            </group>
                        </group>
                        <group>
                            <field name="receiver_info"/>
                        </group>
                    </page>
                </xpath>
			</field>
		</record>
        
        <record id="stock_picking_act" model="ir.actions.act_window">
            <field name="name">待发货</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('own_data', '=', True), ('b2b_state', '=', 'done')]</field>
        </record>

        <record id="stock_picking_act_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_picking_tree"/>
            <field name="act_window_id" ref="stock_picking_act"/>
        </record>

        <record id="stock_picking_act_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_picking_form"/>
            <field name="act_window_id" ref="stock_picking_act"/>
        </record>

        <menuitem id="stock_picking_menu" name="待发货" parent="b2b_platform.stock_parent_menu" sequence="1"
                  action="stock_picking_act"/>

        <record id="stock_picking_act2" model="ir.actions.act_window">
            <field name="name">已发货</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('own_data', '=', True), ('b2b_state', '=', 'wait_delivery')]</field>
        </record>

        <record id="stock_picking_act_tree2" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_picking_tree"/>
            <field name="act_window_id" ref="stock_picking_act2"/>
        </record>

        <record id="stock_picking_act_form2" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_picking_form"/>
            <field name="act_window_id" ref="stock_picking_act2"/>
        </record>

        <menuitem id="stock_picking_menu2" name="已发货" parent="b2b_platform.stock_parent_menu" sequence="2"
                  action="stock_picking_act2"/>
	</data>
</odoo>