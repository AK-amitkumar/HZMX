<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sale_order_tree" model="ir.ui.view">
			<field name="name">sale_order_tree</field>
			<field name="model">sale.order</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
                    <field name="sale_date"/>
                    <field name="merchant_id"/>
                    <field name="operator_id"/>
                    <field name="state"/>
				</tree>
			</field>
		</record>

        <record id="sale_order_form1" model="ir.ui.view">
			<field name="name">sale_order_form</field>
			<field name="model">sale.order</field>
			<field name="arch" type="xml">
				<form>
                    <field name="state" invisible="1"/>
					<sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="platform"/>
                                <field name="shop_id"/>
                                <field name="e_order"/>
                                <field name="amazon_country_id"/>
                                <field name="e_order_amount"/>
                                <field name="e_order_freight"/>
                                <field name="e_order_commission"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="delivery_mode"/>
                                <field name="amazon_state"/>
                                <field name="sale_date"/>
                                <field name="confirm_date"/>
                            </group>
                        </group>
						<notebook>
                            <page string="订单明细">
                                <field name="order_line">
                                    <tree editable="bottom">
                                        <field name="order_item_id"/>
                                        <field name="shop_product_id"/>
                                        <field name="e_currency_id"/>
                                        <field name="e_price_unit"/>
                                        <field name="e_freight" sum="1"/>
                                        <field name="by_platform"/>
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="product_uom"/>
                                        <field name="product_uom_qty"/>
                                        <field name="price_subtotal" sum="1"/>
                                    </tree>
                                </field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

        <record id="sale_order_form" model="ir.ui.view">
			<field name="name">sale_order_form</field>
			<field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_done']" position="after">
                    <button name="false_delivery" type="object" string="假发货"/>
                </xpath>
				<xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="shop_id"/>
                    <field name="e_order"/>
                    <field name="amazon_country_id"/>
                    <field name="e_order_amount"/>
                    <field name="e_order_freight"/>
                    <field name="e_order_commission"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="partner_id"/>
                    <field name="delivery_mode"/>
                    <field name="amazon_state"/>
                    <field name="sale_date"/>
                    <field name="confirm_date"/>
                    <field name="shipment_service_level_category"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="before">
                    <field name="order_item_id"/>
                    <field name="shop_product_id"/>
                    <field name="e_currency_id"/>
                    <field name="e_price_unit"/>
                    <field name="e_freight"/>
                    <field name="by_platform"/>
                </xpath>
                <xpath expr="//page[position()=1]" position="after">
                    <page string="收件信息">
                        <group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                        </group>
                    </page>
                </xpath>
			</field>
		</record>
        
        <record id="sale_order_search" model="ir.ui.view">
			<field name="name">sale_order_search</field>
			<field name="model">sale.order</field>
			<field name="arch" type="xml">
				<search string="">
					<field name="name"/>
				</search>
			</field>
		</record>

        <record id="sale_order_act" model="ir.actions.act_window">
            <field name="name">销售订单</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="sale_order_search"/>
        </record>

        <record id="sale_order_act_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_order_tree"/>
            <field name="act_window_id" ref="sale_order_act"/>
        </record>

        <record id="sale_order_act_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_form"/>
            <field name="act_window_id" ref="sale_order_act"/>
        </record>

        <menuitem id="sale_order_menu" name="客户订单" parent="b2b_platform.sale_order_parent_menu" sequence="4"
                  action="sale_order_act"/>
	</data>
</odoo>