<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
 <record id="sale_order_tree" model="ir.ui.view">
			<field name="name">sale_order_tree</field>
			<field name="model">sale.order</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
                    <field name="sale_date"/>
                    <field name="merchant_id"/>
                    <field name="operator_id"/>
                    <field name="state"/>
				</tree>
			</field>
		</record>

        <record id="sale_order_form" model="ir.ui.view">
			<field name="name">sale_order_form</field>
			<field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
                <xpath expr="//header" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <field name="hide_platform_purchase_button" invisible="1"/>
                        <field name="hide_myself_delivery_button" invisible="1"/>
                        <button name="false_delivery" type="object" string="假发货" states="draft,sent,sale"
                                class="btn-primary"/>
                        <button name="action_confirm" string="自有发货" class="btn-primary o_sale_confirm"
                                attrs="{'invisible': [('hide_myself_delivery_button', '=', True)]}" type="object"/>
                        <button name="platform_purchase" type="object" string="平台采购" class="btn-primary"
                                attrs="{'invisible': [('hide_platform_purchase_button', '=', True)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale"/>
                    </header>
                </xpath>
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <field name="purchase_count" invisible="1"/>
                    <button name="view_purchase_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                        <field name="purchase_count" widget="statinfo" string="采购单"/>
                    </button>
                </xpath>
                <!--<div class="oe_button_box" name="button_box">-->
                    <!--<button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_count', '=', 0)]}">-->
                        <!--<field name="invoice_count" widget="statinfo" string="Invoices"/>-->
                    <!--</button>-->
                <!--</div>-->
                <xpath expr="//sheet/group" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/group[position()=1]" position="after">
                    <group>
                        <group>
                            <field name="shop_id"/>
                            <field name="e_order"/>
                            <field name="sale_date"/>
                            <field name="confirm_date"/>
                            <field name="delivery_mode"/>
                            <field name="amazon_state"/>
                            <field name="shipment_service_level_category"/>
                            <field name="e_order_amount"/>
                            <field name="e_order_freight"/>
                            <field name="e_order_commission"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="country_id"/>
                            <field name="province"/>
                            <field name="city"/>
                            <field name="street"/>
                            <field name="postal_code"/>
                            <field name="phone"/>
                            <!--<field name="e_mail"/>-->
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="before">
                    <field name="order_item_id"/>
                    <field name="shop_product_id"/>
                    <field name="e_currency_id"/>
                    <field name="e_price_unit"/>
                    <field name="e_freight"/>
                    <field name="own_product" readonly="1"/>
                </xpath>
                <!--<xpath expr="//page[position()=1]" position="after">-->
                    <!--<page string="收件信息">-->
                        <!--<group>-->
                            <!--<group>-->
                                <!--<field name="partner_id"/>-->
                            <!--</group>-->
                        <!--</group>-->
                    <!--</page>-->
                <!--</xpath>-->
			</field>
		</record>
        
        <record id="sale_order_search" model="ir.ui.view">
			<field name="name">sale_order_search</field>
			<field name="model">sale.order</field>
			<field name="arch" type="xml">
				<search string="">
					<field name="name"/>
				</search>
			</field>
		</record>

        <record id="sale_order_act" model="ir.actions.act_window">
            <field name="name">销售订单</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="sale_order_search"/>
            <field name="context">{'view_own_data': True}</field>
        </record>

        <record id="sale_order_act_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_order_tree"/>
            <field name="act_window_id" ref="sale_order_act"/>
        </record>

        <record id="sale_order_act_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_form"/>
            <field name="act_window_id" ref="sale_order_act"/>
        </record>

        <menuitem id="sale_order_menu" name="客户订单" parent="b2b_platform.sale_order_parent_menu" sequence="4"
                  action="sale_order_act"/>
	</data>
</odoo>