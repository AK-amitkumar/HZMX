<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="purchase_order_form" model="ir.ui.view">
			<field name="name">purchase_order_form</field>
			<field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
                <xpath expr="//header" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="confirm_purchase_ljp" type="object" string="确认采购"
                                class="btn-primary"/>
                        <field name="platform_purchase_state" widget="statusbar" statusbar_visible="draft,send,done"/>
                    </header>
                </xpath>
                <!--<xpath expr="//button[@name='action_view_picking']" position="after">-->
                    <!--<field name="delivery_order_count" invisible="1"/>-->
                    <!--<button type="object" name="view_delivery_order" class="oe_stat_button" icon="fa-truck">-->
                        <!--<field name="delivery_order_count" widget="statinfo" string="Shipment" />-->
                    <!--</button>-->
                    <!--&lt;!&ndash;<button name="view_delivery_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o">&ndash;&gt;-->
                        <!--&lt;!&ndash;<field name="delivery_order_count" widget="statinfo" string="发货单"/>&ndash;&gt;-->
                    <!--&lt;!&ndash;</button>&ndash;&gt;-->
                <!--</xpath>-->

                <xpath expr="//sheet/div/button[@name='action_view_picking']" position="after">
                    <field name="delivery_order_count" invisible="1"/>
                    <button name="view_delivery_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                        <field name="delivery_order_count" widget="statinfo" string="发货单"/>
                    </button>
                </xpath>
			</field>
		</record>

        <record id="purchase_order_act" model="ir.actions.act_window">
            <field name="name">采购订单</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('own_data', '=', True)]</field>
        </record>

        <record id="purchase_order_act_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase.purchase_order_tree"/>
            <field name="act_window_id" ref="purchase_order_act"/>
        </record>

        <record id="purchase_order_act_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase.purchase_order_form"/>
            <field name="act_window_id" ref="purchase_order_act"/>
        </record>

        <menuitem id="purchase_order_menu" name="采购订单" parent="b2b_platform.purchase_parent_menu" sequence="1"
                  action="purchase_order_act"/>
	</data>
</odoo>