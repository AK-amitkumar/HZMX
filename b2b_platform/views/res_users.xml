<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_users_tree" model="ir.ui.view">
			<field name="name">res_users_tree</field>
			<field name="model">res.users</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="audit_state"/>
				</tree>
			</field>
		</record>

		<record id="res_users_form" model="ir.ui.view">
			<field name="name">res_users_form</field>
			<field name="model">res.users</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="pass_audit" type="object" string="审核通过" class="oe_highlight"/>
					</header>
					<sheet>
						<div class="oe_title" style="width:400px;">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
						<group>
							<group>
								<field name="email"/>
                                <field name="phone"/>
							</group>
						</group>
						<notebook>
							<page string="权限组">
								<field name="groups_id">
									<tree>
										<field name="name"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!--待审核商户-->
        <record id="res_users_act" model="ir.actions.act_window">
			<field name="name">商户</field>
			<field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="domain">[('audit_state','=','waiting')]</field>
		</record>

        <record id="res_users_act_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="b2b_platform.res_users_tree"/>
            <field name="act_window_id" ref="b2b_platform.res_users_act"/>
        </record>

        <record id="res_users_act_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="b2b_platform.res_users_form"/>
            <field name="act_window_id" ref="b2b_platform.res_users_act"/>
        </record>

        <menuitem id="res_users_menu" name="商户" parent="merchant_menu_parent" sequence="1"
                  action="res_users_act"/>

		<!--审核通过的商户-->
		<record id="audit_pass_user_act" model="ir.actions.act_window">
			<field name="name">商户</field>
			<field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="domain">[('audit_state','=','pass')]</field>
		</record>

        <record id="res_users_act_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="b2b_platform.res_users_tree"/>
            <field name="act_window_id" ref="audit_pass_user_act"/>
        </record>

        <record id="res_users_act_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="b2b_platform.res_users_form"/>
            <field name="act_window_id" ref="audit_pass_user_act"/>
        </record>

        <menuitem id="audit_pass_user_menu" name="审核通过" parent="merchant_menu_parent" sequence="2"
                  action="audit_pass_user_act"/>
	</data>
</odoo>		