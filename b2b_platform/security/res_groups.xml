<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<record id="b2b_shop_operator" model="res.groups">
            <field name="name">b2b业务员</field>
            <field name="implied_ids" eval="[(6, 0, [
                ref('purchase.group_purchase_manager'),
                ref('sales_team.group_sale_salesman_all_leads'),
                ref('stock.group_stock_manager'),
                ])]"/>
        </record>

        <record id="b2b_seller" model="res.groups">
            <field name="name">b2b商户</field>
            <field name="implied_ids" eval="[
                (4, ref('b2b_platform.b2b_shop_operator')),
                (4, ref('base.group_erp_manager')),
                ]"/>
        </record>

        <record id="b2b_manager" model="res.groups">
            <field name="name">b2b管理员</field>
            <field name="implied_ids" eval="[(6, 0, [
                ref('b2b_platform.b2b_seller'),
                ])]"/>
        </record>

